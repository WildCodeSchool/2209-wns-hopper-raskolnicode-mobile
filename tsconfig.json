{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react-native",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": "./",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true
  },

  "extends": "expo/tsconfig.base",
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
